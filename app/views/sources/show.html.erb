<dl>
    <dt>Title:</dt>
        <dd><%= @source.title %></dd>
    <dt>Year:</dt>
        <dd><%= @source.year %></dd>
    <dt>Site name:</dt>
        <dd><%= @source.site_name %></dd>
    <dt>Publication:</dt>
        <dd><%= @source.publication %></dd>
    <dt>Additional Info:</dt>
        <dd><%= @source.additional_info %></dd>
    <dt>Description</dt>
        <dd><%= @source.description %></dd>
</dl>

<%= link_to "Edit Source", edit_source_path(@source), class: "button" %>
<%= link_to("Delete Source", source_path(@source), method: :delete, class: "button danger") %>
